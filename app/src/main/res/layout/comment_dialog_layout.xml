<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/top_bar"
            android:background="#ffffffff"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff424242"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Comment"
                android:layout_centerInParent="true"
                android:fontFamily="@font/hammersmith_one"
                android:layout_marginStart="10.0dip" />

        </RelativeLayout>
        <EditText
            android:textSize="14.0sp"
            android:gravity="start"
            android:id="@+id/commentEditText"
            android:background="@drawable/round_back_very_light_blue10"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="180.0dip"
            android:hint="Write here..."
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0">

            <Button
                android:id="@+id/cancelBtn"
                android:background="@drawable/round_back_very_light_blue10"
                android:layout_width="0.0dip" android:layout_height="40.0dip"
                android:layout_marginTop="20.0dip" android:layout_marginBottom="20.0dip"
                android:text="Cancel"
                android:layout_weight="1.0"
                android:textAllCaps="false"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="5.0dip" />

            <Button
                android:textColor="#ffffffff"
                android:id="@+id/submitBtn"
                android:background="@drawable/round_back_green10"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginBottom="20.0dip"
                android:text="Submit"
                android:layout_weight="1.0"
                android:textAllCaps="false"
                android:layout_marginStart="5.0dip"
                android:layout_marginEnd="10.0dip" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>